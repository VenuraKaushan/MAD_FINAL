<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg2"
        android:backgroundTint="@color/material_dynamic_neutral70"

        tools:context=".AddHotel">

        <Button
            android:id="@+id/btnInsertData"
            android:layout_width="141dp"
            android:layout_height="48dp"
            android:layout_marginStart="135dp"
            android:layout_marginTop="613dp"
            android:layout_marginEnd="135dp"
            android:layout_marginBottom="70dp"
            android:backgroundTint="@color/white"
            android:text="@string/add"
            android:textColor="@color/black"
            app:cornerRadius="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="71dp"
            android:layout_marginBottom="569dp"
            android:text="Do you want to add any hotel?"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etPlaceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="416dp"
            android:layout_marginEnd="101dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:hint="@string/place_name"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintBottom_toTopOf="@+id/etDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="472dp"
            android:layout_marginEnd="101dp"
            android:layout_marginBottom="12dp"
            android:ems="10"
            android:hint="@string/description"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintBottom_toTopOf="@+id/etAmount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="532dp"
            android:layout_marginEnd="101dp"
            android:layout_marginBottom="33dp"
            android:ems="10"
            android:hint="@string/amount"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintBottom_toTopOf="@+id/btnInsertData"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnSelect"
                    android:layout_width="67dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="172dp"

                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="172dp"
                    android:layout_marginBottom="12dp"
                    android:text="@string/btnSelect"
                    android:textColor="@color/black"
                    android:textSize="8sp"
                    app:backgroundTint="@color/butt"
                    app:layout_constraintBottom_toTopOf="@+id/etPlaceName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/uploadedImage"
                    tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/uploadedImage"
            android:layout_width="203dp"
            android:layout_height="202dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header"
            app:srcCompat="@drawable/add_img_icon_removebg_preview" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>